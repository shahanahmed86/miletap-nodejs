{
	"name": "miletap-nodejs",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.js",
	"scripts": {
		"prepare": "echo 'installing husky...' && husky install",
		"up": "docker compose up -d",
		"down": "docker compose down",
		"down:hard": "docker compose down -v",
		"lint": "eslint 'src/**/*.js'",
		"lint:fix": "eslint 'src/**/*.js' --fix",
		"prettify": "prettier --config .prettierrc --check 'src/**/*.js'",
		"prettify:fix": "prettier --config .prettierrc 'src/**/*.js' --write",
		"prettify:watch": "onchange 'src/**/*.js' --exclude-path .prettierignore -- prettier --config .prettierrc --write {{changed}}",
		"start:dev": "nodemon --legacy-watch",
		"start": "node src/index.js",
		"migrate:up": "sequelize-cli db:migrate",
		"migrate:down": "sequelize-cli db:migrate:undo"
	},
	"keywords": [],
	"author": "Shahan Ahmed Khan",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"husky": "^8.0.3",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"pg": "^8.11.5",
		"pg-hstore": "^2.3.4",
		"radash": "^12.1.0",
		"sequelize": "^6.37.3",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.0",
		"uuid": "^9.0.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/js": "^9.3.0",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-security": "^1.7.1",
		"globals": "^15.3.0",
		"lint-staged": "^15.1.0",
		"nodemon": "^3.1.0",
		"onchange": "^7.1.0",
		"prettier": "^3.2.5",
		"sequelize-cli": "^6.6.2"
	}
}
